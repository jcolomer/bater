<%= erb :nav, locals: {id: @user.id} %>
<div class="container">
  <p><u>Following:</u></p>

  <% follower_id_array = @user.who_i_am_following %>

  <% follower_id_array.each do |id| %>
    <% follower = User.find(id) %>
    <ul class="list">
      <a href="/users/<%= id %>/profile"><%= follower.name %></a>
    </ul>
  <% end %>
</div>
